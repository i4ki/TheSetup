#!/usr/bin/env rc

ps1='% '    # default prompt
tab='   '   # a tab character

plan9=/usr/local/plan9
acmepath=$home/acme/
goroot=$home/projects/3rdparty/go
GOROOT=$goroot
gopath=$home/projects/go-workspace
GOPATH=$gopath
path=($path $home/bin $acmepath $gopath/bin $goroot/bin $plan9/bin)
EDITOR=acme

# Get rid of backspace characters in Unix man output.
PAGER=nobs

# bash compatibility
LANG=pt_BR.UTF-8
lang=$LANG

BROWSER=chromium

fn dockerclean {
	docker ps | grep -v CONTAINER | cut -d' ' -f1 | xargs docker rm -vf
}

# golang stuff
fn gocd {
	builtin cd $gopath/src/$1
}

# git stuff
fn gitp {
	remote=$*(1)
	branch=$*(2)

	if(~ $#remote 0) remote=origin
	if(~ $#branch 0) branch=master
	
	git pull $remote $branch
}

fn pwd {
  if(~ $#dir 0)
    dir=â€˜{ /bin/pwd}

  echo $dir
}

